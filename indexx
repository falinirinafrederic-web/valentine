  <script>
    // ----------------------------
    // Bouton Non qui fuit
    // ----------------------------
    const noBtn = document.getElementById("noBtn");
    const btnWidth = 120;
    const btnHeight = 50;

    noBtn.addEventListener("mouseenter", () => {
      const maxX = window.innerWidth - btnWidth;
      const maxY = window.innerHeight - btnHeight;

      const newX = Math.random() * maxX;
      const newY = Math.random() * maxY;

      noBtn.style.position = "fixed";
      noBtn.style.left = newX + "px";
      noBtn.style.top = newY + "px";
    });

    // ----------------------------
    // Bouton Oui
    // ----------------------------
    const yesBtn = document.getElementById("yesBtn");
    const yesText = document.getElementById("yesText");
    const texts = ["Tâ€™es sÃ»r ?", "Oui encore ?", "Vraiment ?", "Oui encore ?", "Allez ðŸ˜³"];
    let clickCount = 0;

    yesBtn.addEventListener("click", () => {
      clickCount++;

      // Agrandissement progressif
      const scale = 1 + clickCount * 0.2;
      yesBtn.style.transform = `scale(${scale})`;

      // Changement du texte
      if (clickCount <= texts.length) {
        yesText.textContent = texts[clickCount - 1];
      }

      // AprÃ¨s 5 clics, passer Ã  l'Ã©cran final
      if (clickCount === 5) {
        setTimeout(() => {
          document.getElementById("screen1").classList.add("hidden");
          document.getElementById("screen2").classList.remove("hidden");
          startFinalAnimation();
        }, 500);
      }
    });

    // ----------------------------
    // Ã‰cran final avec cÅ“urs
    // ----------------------------
    const finalMessage = document.getElementById("finalMessage");
    const finalSubMessage = document.getElementById("finalSubMessage");

    function startFinalAnimation() {
      // texte principal animÃ©
      finalMessage.style.opacity = 1;
      finalMessage.style.animation = "bounceIn 1s forwards";

      // explosion de cÅ“urs
      launchHearts();

      // texte secondaire aprÃ¨s 3 secondes
      setTimeout(() => {
        finalSubMessage.style.opacity = 1;
        finalSubMessage.style.animation = "bounceIn 1s forwards";
      }, 3000);
    }

    function launchHearts() {
      for (let i = 0; i < 50; i++) {
        const heart = document.createElement("div");
        heart.textContent = "ðŸ’–";
        heart.style.position = "fixed";
        heart.style.left = Math.random() * 100 + "vw";
        heart.style.top = "100vh";
        heart.style.fontSize = Math.random() * 30 + 20 + "px";
        heart.style.animation = `floatUp ${2 + Math.random() * 2}s ease-out forwards`;
        document.body.appendChild(heart);

        setTimeout(() => heart.remove(), 4000);
      }
    }

  </script>
