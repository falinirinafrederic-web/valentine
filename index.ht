<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Valentine ðŸ’–</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      background: #ffe6f0;
      margin: 0;
      height: 100vh;
      overflow: hidden;
    }

    h1 {
      color: #d63384;
      margin-top: 50px;
    }

    .buttons {
      margin-top: 50px;
      position: relative;
      height: 200px;
    }

    button {
      font-size: 20px;
      padding: 15px 30px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      position: absolute;
      transition: transform 0.3s;
    }

    #yesBtn {
      background-color: #ff4d6d;
      color: white;
      left: 40%;
      top: 50%;
    }

    #noBtn {
      background-color: #ccc;
      color: black;
      left: 60%;
      top: 50%;
    }

    .text-below {
      display: block;
      margin-top: 20px;
      font-size: 18px;
      color: #d63384;
    }

    .final-text {
      font-size: 30px;
      color: #d63384;
      margin-top: 50px;
      opacity: 0;
      position: relative;
    }

    /* Animation des textes */
    @keyframes bounceIn {
      0% { opacity: 0; transform: scale(0.5) translateY(-50px);}
      50% { transform: scale(1.2) translateY(10px);}
      70% { transform: scale(0.9) translateY(-5px);}
      100% { opacity: 1; transform: scale(1) translateY(0);}
    }

    @keyframes floatUp {
      to {
        transform: translateY(-120vh);
        opacity: 0;
      }
    }
  </style>
</head>
<body>
  <h1>Veux-tu Ãªtre ma Valentine ? ðŸ’–</h1>

  <div class="buttons">
    <button id="yesBtn">Oui</button>
    <span class="text-below" id="yesText"></span>
    <button id="noBtn">Non</button>
  </div>

  <div id="finalText1" class="final-text">Merci d'avoir dit oui ðŸ’–</div>
  <div id="finalText2" class="final-text">Rendez-vous le 14 fÃ©vrier Ã  l'heure ðŸ•’</div>

  <script>
    // ----------------------------
    // Bouton Non qui fuit
    // ----------------------------
    const noBtn = document.getElementById("noBtn");
    const btnWidth = 120;
    const btnHeight = 50;

    noBtn.addEventListener("mouseenter", () => {
      const maxX = window.innerWidth - btnWidth;
      const maxY = window.innerHeight - btnHeight;

      const newX = Math.random() * maxX;
      const newY = Math.random() * maxY;

      noBtn.style.left = newX + "px";
      noBtn.style.top = newY + "px";
    });

    // ----------------------------
    // Bouton Oui qui s'agrandit et texte
    // ----------------------------
    const yesBtn = document.getElementById("yesBtn");
    const yesText = document.getElementById("yesText");

    const texts = ["Tâ€™es sÃ»r ?", "Certain ?", "Vraiment ?", "Allez ðŸ˜³", "OUIII ðŸ’–"];
    let clickCount = 0;

    yesBtn.addEventListener("click", () => {
      clickCount++;

      // Agrandissement progressif
      const scale = 1 + clickCount * 0.2;
      yesBtn.style.transform = `scale(${scale})`;

      // Changement du texte
      if (clickCount <= texts.length) {
        yesText.textContent = texts[clickCount - 1];
      }

      // Explosion de cÅ“urs au 5e clic
      if (clickCount === 5) {
        launchHearts();
        showFinalTexts();
      }
    });

    // ----------------------------
    // Fonction explosion de cÅ“urs
    // ----------------------------
    function launchHearts() {
      for (let i = 0; i < 50; i++) {
        const heart = document.createElement("div");
        heart.textContent = "ðŸ’–";
        heart.style.position = "fixed";
        heart.style.left = Math.random() * 100 + "vw";
        heart.style.top = "100vh";
        heart.style.fontSize = Math.random() * 30 + 20 + "px";
        heart.style.animation = `floatUp ${2 + Math.random() * 2}s ease-out forwards`;
        document.body.appendChild(heart);

        setTimeout(() => heart.remove(), 4000);
      }
    }

    // ----------------------------
    // Affichage des textes finaux
    // ----------------------------
    const finalText1 = document.getElementById("finalText1");
    const finalText2 = document.getElementById("finalText2");

    function showFinalTexts() {
      finalText1.style.opacity = 1;
      finalText1.style.animation = "bounceIn 1s forwards";

      setTimeout(() => {
        finalText2.style.opacity = 1;
        finalText2.style.animation = "bounceIn 1s forwards";
      }, 5000); // 5 secondes aprÃ¨s
    }
  </script>
</body>
</html>
